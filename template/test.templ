package template

import "strconv"

templ Test() {
	<p class="">Hello fro GO</p>
}

type Anwser struct {
	Ok      bool
	Content string
}

type QuizMC struct {
	Awnsers  []Anwser
	Question string
}

templ MC(quiz []QuizMC, id int, name string) {
	<div class="card-body grow" id="quiz">
		<div class="card-title justify-between">
			<h2>
				{ quiz[id-1].Question }
			</h2>
			<span class="min-w-fit">
				{ id } / { len(quiz) }
			</span>
		</div>
		<ul class="list grow">
			for _, anwser := range quiz[id-1].Awnsers {
				<li class="list-row flex flex-row ">
					<div class="grow">{ anwser.Content }</div>
					<input type="checkbox" class="input checkbox"/>
				</li>
			}
		</ul>
		<div class="card-actions justify-end">
			if id > 1 {
				<button
					class="btn btn-ghost glass"
					hx-trigger="click"
					hx-swap="outerHTML"
					hx-target="#quiz"
					hx-get={ "ubung/" + name + "/" + strconv.Itoa(id-1) }
				>Zur√ºck</button>
			}
			if id == len(quiz) {
				<a
					href="/dashboard.html"
					class="btn btn-primary"
				>Weiter</a>
			} else {
				<button
					class="btn btn-primary"
					hx-trigger="click"
					hx-swap="outerHTML"
					hx-target="#quiz"
					hx-get={ "ubung/" + name + "/" + strconv.Itoa(id+1) }
				>Weiter</button>
			}
		</div>
	</div>
}
